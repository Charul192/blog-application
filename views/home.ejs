<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Home</title>
  </head>
  <body>
    <%- include('./partials/nav') %>

    <div class="container mt-3">
      <% if (blogs.length === 0) { %>
      <p>No blogs found.<br />Please add a blog to see content here.</p>
      <% } else { %>
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
        <% blogs.forEach(blog => { %>
        <div class="col">
          <div class="card h-100">
            <img
              src="<%= blog.coverImageURL %>"
              class="card-img-top img-fluid"
              alt="cover"
            />
            <div class="card-body">
              <h5 class="card-title"><%= blog.title %></h5>
              <a href="/blog/<%= blog._id %>" class="btn btn-primary w-100"
                >View</a
              >
            </div>
          </div>
        </div>
        <% }) %>
      </div>
      <% } %>
    </div>

    <%- include('./partials/script') %>
  </body>
</html>
